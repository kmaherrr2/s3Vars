pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')  
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')  
    }
    stages {
        stage('Checkout Creator Repository') {
            steps {
                git url: 'https://github.com/vKemo/s3Creator/', branch: 'main'
            }
        }
        stage('Checkout Vars Repository') {
            steps {
                dir('s3Vars') {
                    git url: 'https://github.com/vKemo/s3Vars/', branch: 'main'
                }
            }
        }
        stage('Terraform Init') {
            steps {
                script {
      
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Apply First Workspace') {
            steps {
                script {
      
                    sh '''
                    terraform workspace new first || true
                    terraform workspace select first
                    terraform apply -var-file=s3Vars/vars.tfvars -auto-approve
                    '''
                }
            }
        }
        stage('Terraform Apply Second Workspace') {
            steps {
                script {
                    sh '''
                    terraform workspace new second || true
                    terraform workspace select second
                    terraform apply -var-file=s3Vars/terraform.tfvars -auto-approve
                    '''
                }
            }
        }
    }
}
