pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')  
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')  
    }
    stages {
        stage('Checkout Repository') {
            steps {
                git url: 'https://github.com/vKemo/s3Creator/', branch: 'main'
            }
        }
        stage('Terraform Init') {
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }
       /* stage('Terraform Create first worksapce') {
            steps {
                script {
                    sh 'terraform workspace new first'
                }
            }
        } */
        stage('Terraform seclect first worksapce') {
            steps {
                script {
                    sh 'terraform workspace select first'
                }
            }
        }
        stage('Terraform Apply first vars') {
            steps {
                script {
                    sh 'terraform apply -var-file=terraform.tfvars -auto-approve'
                }
            }
        }
       stage('Terraform Create secound worksapce') {
            steps {
                script {
                    sh 'terraform workspace new secound'
                }
            }
       }
        stage('Terraform seclect secound worksapce') {
            steps {
                script {
                    sh 'terraform workspace select secound'
                }
            }
        }
        stage('Terraform Apply secound vars') {
            steps {
                script {
                    sh 'terraform apply -var-file=vars.tfvars -auto-approve'
                }
            }
        }
    }
}
