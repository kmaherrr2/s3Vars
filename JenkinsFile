pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')  
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')  
    }
    stages {
        stage('Checkout creator repository') {
            steps {
                git url: 'https://github.com/vKemo/s3Creator/', branch: 'main'
            }
        }
        stage('Checkout vars repository') {
            steps {
                git url: 'https://github.com/vKemo/s3Vars/', branch: 'main'
            }
        }
        stage('Terraform Init') {
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Create first workspace') {
            steps {
                script {
                    sh 'terraform workspace new first || true'
                }
            }
        }
        stage('Terraform Select first workspace') {
            steps {
                script {
                    sh 'terraform workspace select first'
                }
            }
        }
        stage('Terraform Apply first vars') {
            steps {
                script {
                    sh 'terraform apply -var-file=terraform.tfvars -auto-approve'
                }
            }
        }
        stage('Terraform Create second workspace') {
            steps {
                script {
                    sh 'terraform workspace new second || true' 
                }
            }
        }
        stage('Terraform Select second workspace') {
            steps {
                script {
                    sh 'terraform workspace select second'
                }
            }
        }
        stage('Terraform Apply second vars') {
            steps {
                script {
                    sh 'terraform apply -var-file=vars.tfvars -auto-approve'
                }
            }
        }
    }
}
